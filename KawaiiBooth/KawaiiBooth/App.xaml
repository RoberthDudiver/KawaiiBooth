<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KawaiiBooth.App">

    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- 🔽 Plantilla con imagen de fondo -->
            <ControlTemplate x:Key="BasePageTemplate">
                <Grid>
                    <!-- Fondo con imagen -->
                    <Image Source="Resources/background.png"
                           Aspect="AspectFill"
                           Opacity="1" />

                    <!-- Aquí va el contenido de cada página -->
                    <ContentPresenter />
                </Grid>
            </ControlTemplate>

            <!-- 🔽 Estilo global para ContentPage -->
            <Style TargetType="ContentPage">
                <Setter Property="ControlTemplate" Value="{StaticResource BasePageTemplate}" />
            </Style>

        </ResourceDictionary>

    </Application.Resources>
</Application>
