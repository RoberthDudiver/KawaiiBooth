<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KawaiiBooth.Pages.KawaiiButton"
             x:Name="Root">

    <Border Stroke="{Binding Source={x:Reference Root}, Path=BorderColor}"
            StrokeThickness="5"
            StrokeShape="RoundRectangle 40"
            HeightRequest="90"
            WidthRequest="330">

        <Grid>
            <!-- Fondo con degradado -->
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="{Binding Source={x:Reference Root}, Path=TopColor}" Offset="0.0"/>
                    <GradientStop Color="{Binding Source={x:Reference Root}, Path=BottomColor}" Offset="1.0"/>
                </LinearGradientBrush>
            </Grid.Background>

            <!-- Capa de brillo -->
            <BoxView HeightRequest="45"
                     CornerRadius="40"
                     VerticalOptions="Start"
                     BackgroundColor="{Binding Source={x:Reference Root}, Path=GlossColor}"
                     Opacity="0.5" />

            <!-- Contenido del botÃ³n -->
            <Grid>
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnTapped" />
                </Grid.GestureRecognizers>

                <HorizontalStackLayout Padding="15" Spacing="15" VerticalOptions="Center">
                    <Image Source="{Binding Source={x:Reference Root}, Path=ImageSource}"
                           WidthRequest="50"
                           HeightRequest="50"
                           Aspect="AspectFit" />

                    <VerticalStackLayout VerticalOptions="Center">
                        <!-- Texto simulado con borde -->
                        <Grid>
                            <Label Text="{Binding Source={x:Reference Root}, Path=Text1}"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="{Binding Source={x:Reference Root}, Path=BorderColor}"
                                   TranslationX="1" TranslationY="1" />
                            <Label Text="{Binding Source={x:Reference Root}, Path=Text1}"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="White" />
                        </Grid>
                        <Grid>
                            <Label Text="{Binding Source={x:Reference Root}, Path=Text2}"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="{Binding Source={x:Reference Root}, Path=BorderColor}"
                                   TranslationX="1" TranslationY="1" />
                            <Label Text="{Binding Source={x:Reference Root}, Path=Text2}"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="White" />
                        </Grid>
                    </VerticalStackLayout>
                </HorizontalStackLayout>
            </Grid>
        </Grid>
    </Border>
</ContentView>
